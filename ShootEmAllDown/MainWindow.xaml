<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShootEmAllDown"
        xmlns:Properties="clr-namespace:ShootEmAllDown.Properties" x:Class="ShootEmAllDown.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="443.136" Width="735.169">

    <Grid>
        <Canvas x:Name="PlayField" HorizontalAlignment="Left" Height="412" VerticalAlignment="Top" Width="554" MouseLeftButtonDown="PlayField_MouseLeftButtonDown" Cursor="Cross">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF7CC6E2" Offset="0.115"/>
                    <GradientStop Color="#FF446D7D" Offset="0.733"/>
                    <GradientStop Color="#FF20343B" Offset="1"/>
                    <GradientStop Color="#FF5E97AD" Offset="0.375"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <ListBox x:Name="lb_enemylist" HorizontalAlignment="Left" Height="310" Margin="559,47,0,0" VerticalAlignment="Top" Width="Auto"  ItemsSource="{Binding RandomizedEnemies, Mode=TwoWay}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Level}"/>
                        <TextBlock Text ="{Binding Energy}"/>
                        <TextBlock Text="{Binding BattleCry}"/>
                        <TextBlock Text="{Binding Origin}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Enemy list" HorizontalAlignment="Left" Margin="559,21,0,0" VerticalAlignment="Top" Width="158"/>
        <Label x:Name="status" Content="" HorizontalAlignment="Left" Height="27" Margin="559,368,0,0" VerticalAlignment="Top" Width="54"/>

    </Grid>
</Window>
